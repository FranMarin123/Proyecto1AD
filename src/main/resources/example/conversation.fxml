               <content>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
               </content>
            </ScrollPane>
                <TextField fx:id="conversation" maxWidth="450.0" prefWidth="450.0" promptText="Escribir..." />
